            android:contentDescription="重命名"
            android:visibility="gone"
            app:backgroundTint="?attr/colorSurfaceVariant"
            app:tint="?attr/colorOnSurfaceVariant"
            app:fabSize="mini"
            app:fabCustomSize="40dp"
            app:maxImageSize="20dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:elevation="4dp"
            app:pressedTranslationZ="8dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="368dp"
            android:src="@drawable/ic_delete_24"
            android:contentDescription="删除"
            android:visibility="gone"
            app:backgroundTint="?attr/colorErrorContainer"
            app:tint="?attr/colorOnErrorContainer"
            app:fabSize="mini"
            app:fabCustomSize="40dp"
            app:maxImageSize="20dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:elevation="4dp"
            app:pressedTranslationZ="8dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="424dp"
            android:src="@drawable/ic_content_cut_24"
            android:contentDescription="剪切"
            android:visibility="gone"
            app:backgroundTint="?attr/colorPrimaryContainer"
            app:tint="?attr/colorOnPrimaryContainer"
            app:fabSize="mini"
            app:fabCustomSize="40dp"
            app:maxImageSize="20dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:elevation="4dp"
            app:pressedTranslationZ="8dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="480dp"
            android:src="@drawable/ic_content_copy_24"
            android:contentDescription="创建副本"
            android:visibility="gone"
            app:backgroundTint="?attr/colorSecondaryContainer"
            app:tint="?attr/colorOnSecondaryContainer"
            app:fabSize="mini"
            app:fabCustomSize="40dp"
            app:maxImageSize="20dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            app:elevation="4dp"
            app:pressedTranslationZ="8dp" />

    <!-- 文本标签 -->
    <TextView
            android:id="@+id/tv_toolbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="264dp"
            android:background="@android:color/black"
            android:padding="8dp"
            android:text="工具箱"
            android:textColor="@android:color/white"
