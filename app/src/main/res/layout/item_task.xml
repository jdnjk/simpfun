<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/md_theme_surfaceContainerLow"
    app:strokeColor="@color/md_theme_outlineVariant"
    app:strokeWidth="1dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_task_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/task_id_format"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_task_status"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:checkable="false"
                app:chipMinHeight="28dp"
                app:chipStrokeWidth="0dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_task_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_comment_placeholder"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/text_task_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_time_placeholder"
            android:textSize="12sp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:alpha="0.9"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
