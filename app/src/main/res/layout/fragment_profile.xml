<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="32dp">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="12dp">

                <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="用户名：加载中"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_onSurface_highContrast" />

                <TextView
                        android:id="@+id/tv_uid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UID: 0"
                        android:textSize="16sp"
                        android:textColor="#555" />
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QQ: 未绑定"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#555" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="12dp">

                <LinearLayout
                        android:id="@+id/layout_click_point"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分"
                            android:textSize="14sp"
                            android:textColor="#555" />

                    <TextView
                            android:id="@+id/tv_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                </LinearLayout>

                <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#CCCCCC" />

                <LinearLayout
                        android:id="@+id/layout_click_diamond"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="钻石"
                            android:textSize="14sp"
                            android:textColor="#555" />

                    <TextView
                            android:id="@+id/tv_diamond"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#E91E63" />
                </LinearLayout>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="公告"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#333" />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F9F9F9"
                    xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@color/md_theme_inverseOnSurface_highContrast">

                    <TextView
                            android:id="@+id/tv_announcement_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="暂无公告"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textIsSelectable="true"
                            android:textColor="#1A73E8" />

                    <TextView
                            android:id="@+id/tv_announcement_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="暂无内容"
                            android:textSize="14sp"
                            android:textIsSelectable="true"
                            android:textColor="@color/md_theme_onSurface_highContrast"
                            android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_settings"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="设置"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp"
                    app:iconTint="?attr/colorOnSurface" />

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>