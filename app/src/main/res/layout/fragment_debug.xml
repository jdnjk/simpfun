<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_debug_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调试页面"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/tv_web_url_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SWebView URL"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

        <EditText
            android:id="@+id/et_web_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入要打开的网址，例如 https://example.com"
            android:inputType="textUri"
            android:singleLine="true"
            android:autofillHints="username" />

        <Button
            android:id="@+id/btn_open_swebview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="打开 SWebView" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_bugly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="启用 Bugly"
            tools:checked="true" />

        <TextView
            android:id="@+id/tv_token_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Token"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

        <EditText
            android:id="@+id/et_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入 Token"
            android:singleLine="true"
            android:inputType="text"
            android:autofillHints="password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_save_token"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btn_clear_token"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="清空" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
