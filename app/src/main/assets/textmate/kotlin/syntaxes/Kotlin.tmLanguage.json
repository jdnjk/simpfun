{
  "name": "Kotlin",
  "scopeName": "source.kotlin",
  "patterns": [
    { "match": "\\b(class|interface|object|fun|val|var|if|else|for|while|when|return|in|is|package|import|null|true|false)\\b", "name": "keyword.control.kotlin" },
    { "match": "\"([^\"\\\\]|\\\\.)*\"", "name": "string.quoted.double.kotlin" },
    { "match": "//.*$", "name": "comment.line.double-slash.kotlin" },
    { "begin": "/\\*", "end": "\\*/", "name": "comment.block.kotlin" }
  ]
}

